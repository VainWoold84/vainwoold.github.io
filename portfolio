    <script>
        lucide.createIcons();

        // --- Translation Logic ---
        const langToggleBtn = document.getElementById('lang-toggle');
        const currentLangSpan = document.getElementById('current-lang');
        let currentLang = 'en';

        const translations = {
            en: {
                nav_home: "Home", nav_portfolio: "Portfolio", nav_shop: "Shop", nav_videos: "Videos",
                btn_sub: "Subscribe", footer_tagline: "Coded with HTML, Tailwind & JS.", footer_site: "Site", footer_socials: "Socials", footer_contact: "Contact", footer_credit: "Made with ‚ù§Ô∏è in France üá´üá∑", footer_mod: "Last modified: Jan 7, 2026",
                cs_simple: "COMING SOON",
                cs_btn_home: "Back to Home"
            },
            fr: {
                nav_home: "Accueil", nav_portfolio: "Portfolio", nav_shop: "Boutique", nav_videos: "Vid√©os",
                btn_sub: "S'abonner", footer_tagline: "Cod√© avec HTML, Tailwind & JS.", footer_site: "Site", footer_socials: "R√©seaux", footer_contact: "Contact", footer_credit: "Fait avec ‚ù§Ô∏è en France üá´üá∑", footer_mod: "Modifi√© le : 7 Janvier 2026",
                cs_simple: "BIENT√îT DISPONIBLE",
                cs_btn_home: "Retour √† l'accueil"
            }
        };

        langToggleBtn.addEventListener('click', () => {
            currentLang = currentLang === 'en' ? 'fr' : 'en';
            currentLangSpan.textContent = currentLang.toUpperCase();
            document.querySelectorAll('[data-key]').forEach(el => {
                const key = el.getAttribute('data-key');
                if (translations[currentLang][key]) {
                    el.style.opacity = 0;
                    setTimeout(() => { 
                        el.innerHTML = translations[currentLang][key]; 
                        el.style.opacity = 1; 
                        lucide.createIcons();
                    }, 200);
                }
            });
        });
    </script>
